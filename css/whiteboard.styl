@import "sensasans"

$primary = #020202
$background = #fdfdfd
$error = #440000

// reset
*
    margin 0
    padding 0
    background none
    color inherit
    font-size inherit
    line-height inherit
    font-weight inherit
    font-style inherit
    text-decoration inherit
    text-rendering optimize-legibility
    border 0 none

em, i
    font-style italic

strong, b
    font-weight bold

html
    font-size 20px

body
    background-color $background
    color $primary

    font-family sans-serif
    line-height 1.4em
    font-weight normal
    font-style inherit
    text-decoration none

h1, h2, h3
    sensa()
    padding 0 0 .75em 0

h1
    font-size (9em / 3)

h2
    font-size (7em / 3)

h3
    font-size (5em / 3)

p
    padding 0 0 1em 0

small
    font-size 50%
    font-color desaturate($primary, 40%)

header
    width 100%
    text-align center
    margin 2rem 0

    p
        sensa()

main
    margin 0 auto

    form
        display block
        text-align center

button
    padding .5em
    border-radius .5em
    border-style solid
    border-color $primary
    border-width 2px
    background-color $primary
    color $background

    &:disabled
        border-color desaturate(@border-color, 40%)
        background-color desaturate(@background-color, 40%)

input[type="text"]
    padding .5em
    border-radius .5em
    border-style solid
    border-width 2px
    border-color $primary

fieldset.error
    input[type="text"].error
        border-color $error

    label
        color $error

.confirm-create
    opacity 0.0
    display none
    transition-property opacity
    trnsaition-duration 1s

    &.show
        display block
        opacity 1.0
