@import "sensasans"

@primary = #020202
@background = #fdfdfd

// reset
*
    margin 0
    padding 0
    background none
    color inherit
    font-size inherit
    line-height inherit
    font-weight inherit
    font-style inherit
    text-decoration inherit
    text-rendering optimize-legibility

em, i
    font-style italic

strong, b
    font-weight bold

html
    font-size 20px

body
    background-color @background
    color @primary

    font-family sans-serif
    line-height 1.4em
    font-weight normal
    font-style inherit
    text-decoration none

h1, h2, h3
    sensa()
    padding 0 0 .75em 0

h1
    font-size (9em / 3)

h2
    font-size (7em / 3)

h3
    font-size (5em / 3)

p
    padding 0 0 1em 0

button
    padding .5em
    border-radius .5em
    border-style solid
    border-color @primary
    background-color @primary
    color @background

input[type="text"]
    padding .5em
    border-radius .5em
    border-style solid
    border-color @primary

header
    width 100%
    text-align center
    margin 2rem 0

    p
        sensa()

main
    margin 0 auto

    form
        display block
        text-align center
